<% currentUser = users.get($(".user-id-grab").data('id')); %>

<% if (!!currentUser) { %>
  <div class="welcome group">
    <h1> Hello <%=currentUser.escape('user_name') %>!</h1>
      <form class="change-name-form">
        <input type="text" name="user[user_name]" placeholder="Change username...">
        <input type="hidden" name="user[id]" value="<%=currentUser.get('id')%>">
        <button>Save</button>
      </form>
      <p>
        See your <a href="<%= '#users/' + currentUser.get('id') %>">definitions</a>
        <br>
        <br>
        Create new words with the + button at the top!
      </p>
      <br>
      <button class="sign-out"> Log Out!</button>
  </div>



<% } else {%>
  <div class="new-session">

    <h1>Sign in to post new words!</h1>

    <form class="sign-in-form group">
      <input type="text" name="user[user_email]" placeholder="email...">
      <input type="password" name="user[password]" placeholder="password...">
       <br>
      <button class="submit-button">Log In!</button> <br>
      <div class="omniauth group">
        <a href="#/users/new"> New User?</a>
        <a href="/auth/twitter">Sign in with Twitter!</a>
        <a href="/auth/facebook">Sign in with Facebook!</a>
      </div>
    </form>

  </div>


<% } %>
